: sleep
	delay := va
: wait_delay
	loop
		vf := delay
		if vf != 0 then
	again
	return

: shake_up_down
	v0 := 60
	loop
		scroll-up 4
		i := long audio_noise
		audio_play_sync
		scroll-down 4
		i := long audio_noise
		audio_play_sync
		v0 += -1
		if v0 != 0 then
	again

	return

: shake_left_right
	v0 := 60
	loop
		scroll-left
		i := long audio_noise
		audio_play_sync
		scroll-right
		i := long audio_noise
		audio_play_sync
		v0 += -1
		if v0 != 0 then
	again

	return
